@model Notes.Client.ViewModels.EditNoteViewModel

<h2 class="leftMarginSmaller">Edit Note</h2>

<form asp-action="EditNote" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal leftMarginDefault"> 
        <div class="form-group">
            <div>You note</div>
            <input asp-for="NoteText" class="form-control" />
        </div>
        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-primary" value="Change note" />
            </div>
        </div>
    </div>
</form>
